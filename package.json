{
  "name": "remix-app-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "main": "build/index.js",
  "scripts": {
    "postinstall": "remix setup cloudflare-workers",
    "build": "cross-env NODE_ENV=production remix build",
    "dev:stylelint": "stylelint **/*.scss",
    "test":"postcss app/styles --use autoprefixer --dir app/styles --ext",
    "dev:css": "sass styles/:app/styles/ --style compressed --no-source-map --watch | postcss app/styles --use autoprefixer -b '>2%, last 3 versions' --dir app/styles --ext",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "dev": "cross-env NODE_ENV=development remix build && run-p dev:*",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js",
    "deploy": "npm run build && wrangler publish"
  },
  "browserslist":[
    "last 3 versions",
    "> 2%"
  ],
  "dependencies": {
    "@remix-run/cloudflare-workers": "^1.2.3",
    "@remix-run/react": "^1.2.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@remix-run/dev": "^1.2.3",
    "@remix-run/eslint-config": "^1.2.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "miniflare": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.9",
    "stylelint": "^14.6.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^4.2.0",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}
